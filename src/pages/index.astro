---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Aden Enterprises, LLC â€” Trusted General Contractor for Complete Residential & Commercial Solutions',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: '(307) 660-3011',
        href: 'tel:+13076603011',
        icon: 'tabler:phone',
      },
      { text: 'Our Services', href: '#services' },
    ]}
    image={{
      src: '~/assets/images/construction-engineer-wear-safety-uniform-under-in-2025-03-13-15-25-19-utc-1.jpg',
      alt: 'Aden Enterprises Construction Engineer',
    }}
  >
    <Fragment slot="title">
      Your General Contractor for <span class="hidden xl:inline">Complete</span>
      <span class="text-accent dark:text-white"> Residential & Commercial</span> Solutions
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">Full-Service Construction Excellence Since 2005.</span> At Aden Enterprises, we manage
        every aspect of your construction project from start to finish.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-accent">Excellence Since 2005.</span>
      As experienced general contractors with over 70 years of combined expertise, we deliver comprehensive building solutions
      that exceed expectations.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note title="Our Commitment:" description="Quality Craftsmanship, Proven Experience, and Single-Source Solutions" />

  <!-- Features Widget *************** -->

  <Features
    id="services"
    tagline="Services"
    title="Our General Contracting Services"
    subtitle="Complete project management from initial planning through final inspection. We coordinate all phases of your residential or commercial project with meticulous attention to detail and timeline management."
    items={[
      {
        title: 'Complete Project Management',
        description:
          'From initial planning through final inspection, we coordinate all phases of your residential or commercial project with meticulous attention to detail and timeline management.',
        icon: 'tabler:clipboard-check',
      },
      {
        title: 'Site Development & Earthwork',
        description:
          "Professional site preparation, grading, and earthwork services that create the perfect foundation for your project's success.",
        icon: 'tabler:shovel',
      },
      {
        title: 'Structural Construction',
        description:
          'Complete framing and structural work executed with precision, ensuring your building stands strong for generations.',
        icon: 'tabler:building',
      },
      {
        title: 'Foundation & Concrete Work',
        description:
          'Comprehensive concrete solutions including foundations, flatwork, sidewalks, driveways, and parking lots for both residential and commercial applications.',
        icon: 'tabler:home',
      },
      {
        title: 'Interior & Exterior Finishes',
        description:
          'Quality craftsmanship in all finishing work, from insulation and drywall to siding, roofing, and final architectural details that bring your vision to life.',
        icon: 'tabler:paint',
      },
      {
        title: 'Single-Source Solution',
        description:
          'One contractor for all your needs means better coordination, accountability, and results. We manage every aspect from start to finish.',
        icon: 'tabler:check',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    isReversed
    tagline="Why Choose Us"
    title="Why Choose Aden Enterprises?"
    items={[
      {
        title: 'Local Expertise',
        description:
          'Proudly serving Gillette and surrounding areas since 2005, with deep roots in our community since 1989.',
      },
      {
        title: 'Proven Experience',
        description: 'Our team brings decades of construction knowledge to every project, big or small.',
      },
      {
        title: 'Quality Commitment',
        description: 'We stand behind our work with superior products and engineered solutions that last.',
      },
    ]}
    image={{
      src: '~/assets/images/basement-framing-construction-interior-frame-of-a-2025-03-28-05-30-07-utc-1.jpg',
      alt: 'Basement Framing Construction',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">Building on Solid Foundations</h3>
      Over 70 years of combined expertise delivering comprehensive building solutions that exceed expectations.
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent
    tagline="Specialized Services"
    title="Additional Specialized Services"
    items={[
      {
        title: 'Helical Pile Installation',
        description: `Professional helical pile foundation systems for challenging soil conditions and structural support requirements.`,
      },
      {
        title: 'Foundation Repair',
        description:
          'Expert foundation repair services to address settling, cracking, and structural issues with proven solutions.',
      },
      {
        title: 'Concrete Raising & Polishing',
        description:
          'Specialized concrete raising techniques and professional polishing services to restore and enhance existing surfaces.',
      },
      {
        title: 'Spray Foam Insulation & Soil Stabilization',
        description:
          'Advanced insulation solutions and soil stabilization services to enhance energy efficiency and structural integrity.',
      },
    ]}
    image={{
      src: '~/assets/images/Foundation.png',
      alt: 'Foundation and Concrete Work',
    }}
  >
    <Fragment slot="content"
      >Beyond our core general contracting capabilities, we offer specialized services to enhance your project.</Fragment
    >

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Steps Widget ****************** -->

  <Steps
    title="Ready to Start Your Project?"
    subtitle="Whether you're planning new construction, renovation, or expansion, Aden Enterprises has the expertise and resources to bring your vision to reality."
    items={[
      {
        title: 'Step 1: <span class="font-medium">Contact Us</span>',
        description:
          "Call us at (307) 660-3011 to discuss your project needs. We'll schedule a consultation to understand your vision and requirements.",
        icon: 'tabler:phone',
      },
      {
        title: 'Step 2: <span class="font-medium">Project Planning</span>',
        description:
          'Our experienced team will work with you to develop a comprehensive plan, timeline, and budget for your construction project.',
        icon: 'tabler:clipboard',
      },
      {
        title: 'Step 3: <span class="font-medium">Expert Execution</span>',
        description:
          'We manage every aspect of your project from start to finish, ensuring quality craftsmanship and timely completion.',
        icon: 'tabler:tools',
      },
      {
        title: 'Project Complete!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: '~/assets/images/Office-Front.png',
      alt: 'Aden Enterprises Office',
    }}
  />

  <!-- Stats Widget ****************** -->

  <Stats
    stats={[
      { title: 'Years of Service', amount: '19+' },
      { title: 'Combined Experience', amount: '70+' },
      { title: 'Serving Gillette Since', amount: '2005' },
      { title: 'Community Roots Since', amount: '1989' },
    ]}
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Call (307) 660-3011',
        href: 'tel:+13076603011',
        icon: 'tabler:phone',
      },
    ]}
  >
    <Fragment slot="title">
      Ready to Start&nbsp;<br class="block sm:hidden" /><span class="sm:whitespace-nowrap">Your Project?</span>
    </Fragment>

    <Fragment slot="subtitle">
      Whether you're planning new construction, renovation, or expansion, Aden Enterprises has the expertise and
      resources to bring your vision to reality. <br class="hidden md:inline" />Contact us today to discuss your project
      needs.
    </Fragment>
  </CallToAction>
</Layout>

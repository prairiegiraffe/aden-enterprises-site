---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact Aden Enterprises, LLC - Get Your Free Quote Today',
  description: 'Contact Aden Enterprises for professional construction services. Call (307) 660-3011 or email josh@adenentllc.com for your project needs.',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Contact Us" />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Get In Touch With Aden Enterprises"
    subtitle="Ready to start your construction project? Contact us today for professional construction services in Gillette and Northeast Wyoming."
    columns={3}
    items={[
      {
        title: 'Phone',
        description: '(307) 660-3011',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'josh@adenentllc.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Address',
        description: '9 Shiplap Spur<br>Gillette, WY 82718',
        icon: 'tabler:map-pin',
      },
    ]}
  />

  <ContactUs
    id="form"
    title="Message Aden Enterprises LLC."
    subtitle="Fill out our contact form and someone will contact you ASAP."
    inputs={[
      {
        type: 'text',
        name: 'firstName',
        label: 'First Name',
        required: true,
      },
      {
        type: 'text',
        name: 'lastName',
        label: 'Last Name',
        required: true,
      },
      {
        type: 'tel',
        name: 'phone',
        label: 'Phone',
        required: true,
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'What Can We Help You With?',
      name: 'message',
      required: true,
    }}
    button="Submit"
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information for project consultation purposes.',
    }}
    description="Our team will contact you as soon as possible to discuss your construction project needs."
  />
</Layout>
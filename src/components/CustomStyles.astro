---
import '@fontsource/open-sans/400.css';
import '@fontsource/open-sans/600.css';
import '@fontsource/open-sans/700.css';
---

<style is:inline>
  :root {
    --aw-font-sans: 'Open Sans', sans-serif;
    --aw-font-serif: 'Open Sans', sans-serif;
    --aw-font-heading: 'Open Sans', sans-serif;

    --aw-color-primary: #cba033;
    --aw-color-secondary: #fcb900;
    --aw-color-accent: #cba033;

    --aw-color-text-heading: #0a0a0a;
    --aw-color-text-default: #0a0a0a;
    --aw-color-text-muted: rgba(10, 10, 10, 0.66);
    --aw-color-bg-page: #f2f2f2;

    --aw-color-bg-page-dark: #444444;

    ::selection {
      background-color: #fcb900;
    }
  }

  .dark {
    --aw-font-sans: 'Open Sans', sans-serif;
    --aw-font-serif: 'Open Sans', sans-serif;
    --aw-font-heading: 'Open Sans', sans-serif;

    --aw-color-primary: #cba033;
    --aw-color-secondary: #fcb900;
    --aw-color-accent: #cba033;

    --aw-color-text-heading: #f2f2f2;
    --aw-color-text-default: #f2f2f2;
    --aw-color-text-muted: rgba(242, 242, 242, 0.66);
    --aw-color-bg-page: #444444;

    ::selection {
      background-color: #fcb900;
      color: #0a0a0a;
    }
  }
</style>
